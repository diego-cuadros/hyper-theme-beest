<style>
  .reviews-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 16px;
    text-align: center;
    font-family: sans-serif;
  }

  .reviews-section h2 {
    font-size: 28px;
    margin-bottom: 30px;
    line-height: 1.4;
  }

  .masonry {
    column-count: 3; /* number of columns */
    column-gap: 20px; /* horizontal spacing */
  }

  @media (max-width: 900px) {
    .masonry {
      column-count: 2;
    }
  }

  @media (max-width: 600px) {
    .masonry {
      column-count: 1;
    }
  }

  .card {
    background: #fff;
    border: 1px solid #e3e3e3;
    border-radius: 16px;
    padding: 16px;
    margin-bottom: 20px; /* vertical spacing */
    display: inline-block;
    width: 100%;
    box-sizing: border-box;
    break-inside: avoid; /* prevents breaking inside columns */
  }

  .card img {
    width: 100%;
    border-radius: 12px;
    margin-top: 12px;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    font-size: 14px;
    color: #333;
  }

  .stars {
    color: #ff7a00;
    font-size: 14px;
  }

  .date {
    color: #888;
  }

  .buyer {
    margin-top: 10px;
    font-size: 14px;
  }

  .verified {
    color: #4caf50;
    font-size: 12px;
  }
  .masonry {
    column-count: 3;
    column-gap: 20px;
  }

  @media (max-width: 900px) {
    .masonry {
      column-count: 2; /* stays two columns on tablets + mobile */
    }
  }

  @media (max-width: 600px) {
    .masonry {
      column-count: 2; /* force 2 columns even on small screens */
    }
  }
</style>
