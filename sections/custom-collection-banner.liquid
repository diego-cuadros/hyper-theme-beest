<style>
  .collection-features-banner {
    position: relative;
    width: 100%;
    overflow: hidden;
    max-height: 400px;
  }

  .banner-media-wrapper {
    width: 100%;
  }

  .banner-media picture,
  .banner-img {
    display: block;
    width: 100%;
    height: auto;
  }

  .banner-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .collection-content {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 100%;
    color: white;
    padding: 40px 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 1440px;
    margin: auto;
  }

  .collection-title {
    font-size: 40px;
    font-weight: 700;
    margin: 0 0 12px 0;
  }

  .collection-desc {
    font-size: 18px;
    margin-bottom: 30px;
    max-width: 450px;
  }

  .features-grid {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(4, 1fr);
    max-width: 900px;
  }

  .feature-item {
    background: rgba(0, 0, 0, 0.55);
    border-radius: 8px;
    padding: 14px 18px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .feature-icon {
    width: 28px;
    height: 28px;
  }

  .feature-text {
    font-size: 14px;
    line-height: 1.4;
  }

  /* mobile */
  @media (max-width: 767px) {
    .collection-content {
      padding: 20px 16px;
    }

    .collection-title {
      font-size: 28px;
    }

    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

{% liquid
  # Choose banner images
  assign banner = section.settings.image
  assign banner_mobile = section.settings.image_mobile | default: banner

  assign image_ratio = banner.aspect_ratio
  assign image_ratio_mobile = banner_mobile.aspect_ratio | default: image_ratio

  # Improve LCP on top sections
  assign loading = 'lazy'
  assign fetchpriority = 'low'
  if section.index < 2
    assign loading = 'eager'
    assign fetchpriority = 'high'
  endif
%}

<section class="collection-features-banner">
  <div class="banner-media-wrapper">
    <picture class="banner-media">
      {% if banner_mobile %}
        <source
          media="(max-width: 767px)"
          srcset="
            {{ banner_mobile | image_url: width: 600 }} 600w,
            {{ banner_mobile | image_url: width: 900 }} 900w,
            {{ banner_mobile | image_url: width: 1200 }} 1200w
          "
          width="{{ banner_mobile.width }}"
          height="{{ banner_mobile.height }}"
        >
      {% endif %}

      {{
        banner
        | image_url: width: banner.width
        | image_tag:
          loading: loading,
          fetchpriority: fetchpriority,
          sizes: '100vw',
          width: banner.width,
          height: banner.height,
          widths: '800,1000,1200,1400,1600,1800,2000,2400,2800',
          alt: alt_image,
          class: 'banner-img'
      }}
    </picture>
  </div>

  <div class="collection-content">
    <h1 class="collection-title">{{ collection.title }}</h1>

    {% if section.settings.description != blank %}
      <p class="collection-desc">{{ section.settings.description }}</p>
    {% endif %}

    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item" {{ block.shopify_attributes }}>
          {% if block.settings.icon %}
            <img
              src="{{ block.settings.icon | image_url: width: 48 }}"
              alt=""
              class="feature-icon"
              width="48"
              height="48"
            >
          {% endif %}
          <span class="feature-text">{{ block.settings.text }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

