<style>
  .dc_compatible-accessories__title {
    text-align: center;
    font-size: 32px;
    line-height: 120%;
    font-weight: 500;
    margin-bottom: 32px;
  }

  .dc_compatible-accessories__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .dc_compatible-accessories__item a {
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 8px;
  }

  .dc_compatible-accessorie__btn-container {
    padding: 0px;
  }

  .dc_compatible-accessorie__shop-now-button {
    align-items: center;
    display: flex;
    background-color: #ff5413;
    border-radius: 3px;
    color: #fff;
    font-size: 16px;
    font-weight: 600;
    height: 35px;
    justify-content: center;
    padding: 6px 10px;
    text-transform: uppercase;
    text-align: center;
    cursor: pointer;
    width: 100%;
  }

  .dc_compatible-accessorie__shop-now-button:hover {
    opacity: 0.9;
  }

  @media (min-width: 768px) {
    .dc_compatible-accessories__title {
      font-size: 40px;
      margin-bottom: 24px;
    }
    .dc_compatible-accessories__grid {
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(2, auto);
      row-gap: 32px;
      column-gap: 16px;
    }
    .dc_compatible-accessories__item {
      text-align: center;
    }
    .dc_compatible-accessories__item a {
      padding: 0px;
    }

    .dc_compatible-accessorie__product-container img {
      width: 100%;
      height: auto;
      display: block;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }
    .dc_compatible-accessories__item a {
      gap: 0;
      border-bottom-left-radius: 12px;
      border-bottom-right-radius: 12px;
    }
    .dc_compatible-accessorie__btn-container {
      padding: 16px;
      border-bottom-left-radius: 12px;
      border-bottom-right-radius: 12px;
    }
  }
</style>

<div
  class="section section--padding page-width page-width--{{ section.settings.container }} color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px; --section-padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="dc_compatible-accessories">
    {% if section.settings.title != blank %}
      <h2 class="dc_compatible-accessories__title">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="dc_compatible-accessories__grid">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}

        {% if product != blank %}
          <div class="dc_compatible-accessories__item" {{ block.shopify_attributes }}>
            <a
              href="{{ product.url }}"
              class="dc_compatible-accessorie__product-container"
              style="background-color: {{ section.settings.card_background_color }};"
            >
              {{ product.featured_image | image_url: width: 600 | image_tag: loading: 'lazy', alt: product.title }}

              <div class="dc_compatible-accessorie__btn-container">
                <div class="dc_compatible-accessorie__shop-now-button">Shop Now</div>
              </div>
            </a>
          </div>
        {% else %}
          <div class="media-wrapper bg-none blocks-radius" style="--aspect-ratio: 1/1;">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ðŸ”¥ Compatible Accessories",
  "settings": [
    {
      "type": "select",
      "id": "container",
      "label": "t:general.container.label",
      "default": "fixed",
      "options": [
        {
          "value": "fixed",
          "label": "t:general.container.options__fixed.label"
        },
        {
          "value": "full",
          "label": "t:general.container.options__full.label"
        }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:general.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background color",
      "default": "#222"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Compatible Accessories"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:general.padding.top.label",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:general.padding.bottom.label",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Accessory Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "ðŸ”¥ Compatible Accessories",
      "blocks": [{ "type": "product" }, { "type": "product" }, { "type": "product" }, { "type": "product" }]
    }
  ]
}
{% endschema %}
